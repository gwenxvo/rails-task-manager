<div class="container">
  <h1>My tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="fa-regular fa-square-check"></i><%= link_to task.title, task_path(task), id: 'item' %>
          <%= link_to '<i class="fa-solid fa-trash-can icon"></i>'.html_safe, task_path(task),
            data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        <% else %>
          <i class="fa-regular fa-square"></i><%= link_to task.title, task_path(task), id: 'item' %>
          <%= link_to '<i class="fa-solid fa-trash-can icon"></i>'.html_safe, task_path(task),
            data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to '<i class="fa-solid fa-plus"></i> Add a new task'.html_safe, new_task_path, class: 'icon' %>
</div>
